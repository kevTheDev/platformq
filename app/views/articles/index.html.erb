<h1>Articles</h1>

<table class="table">
  
  <thead>
    <tr>
      <th>Title</th>
      <th>Created At</th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><%= article.created_at %></td>
    </tr>
  <% end %>
</table>

<hr />

<%= paginate @articles %>

<%= render partial: 'subscribe' %>