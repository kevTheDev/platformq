<h1>Articles</h1>


<table class="table">
  
  <thead>
    <tr>
      <th>Title</th>
      <th>Created At</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.created_at %></td>
      <td><%= link_to 'edit', edit_admin_article_path(article) %></td>
    </tr>
  <% end %>
</table>

<%= paginate @articles %>

<%= link_to 'New Article', new_admin_article_path %>